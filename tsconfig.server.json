{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es6"
    ],
    "allowJs": true,
    "outDir": "./server-dist",
    "baseUrl": "./server",
    "rootDir": "./server",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": [
    "server/**/*.ts",
    "server/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "./node_modules",
    "./node_modules/*",
    "src",
    "server-dist"
  ],
}